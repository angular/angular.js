{
  "root": true,
  "extends": "../../../.eslintrc-browser.json",

  "env": {
    "jasmine": true
  },

  "rules": {
    // Some rules are not that important in tests and conflict with
    // Jasmine or would make it easier to write some tests; we disable
    // those ones here.
    "no-invalid-this": "off",
    "no-throw-literal": "off",
    "no-unused-vars": "off"
  },

  "globals": {
    // ngMocks
    "module": false,
    "inject": true
  }
}
